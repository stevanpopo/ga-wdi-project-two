<h2 class="title is-2">Submit a new book to the community!</h2>

<form method="POST" action="/books">
  <div>
    <label class="label" for="book_name">Name of Book</label>
    <input class="input" type="text" name="book_name" id="book_name">
  </div>
  <div>
    <label class="label" for="book_author">Name of Author</label>
    <input class="input" type="text" name="book_author" id="book_author">
  </div>
  <div>
    <label class="label" for="cover_image">Cover Image</label>
    <input class="input" type="text" name="cover_image" id="cover_image">
  </div>
  <button class="button">Submit Book</button>
</form>
