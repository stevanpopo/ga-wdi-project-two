<h2 class="title is-1">All the books</h2>
<h4 class="subtitle is-3">This is where I will show all books.</h4>
<br>
<div class="columns is-multiline is-mobile">
  <% books.forEach( book =>{ %>
    <div class="card column is-one-third-desktop is-half-tablet">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-128x128 is-3by4">
              <img src="<%= book.cover_image %>" alt="<%= book.book_name %>">
            </figure>
          </div>
          <div class="media-content">
            <h3 class="title is-4"><a href="/books/<%= book.id %>"><%= book.book_name %></a></h3>
            <h4 class="subtitle is-6">by <%= book.book_author %></h4>
            <h4 class="subtitle is-6">
              <% if (book.likes) { %>
                <i class="far fa-heart fa-lg"></i> <%= book.likes %>
              <% } %>
            </h4>


          </div>
        </div>
      </div>
      <footer class="card-footer">
        <h4 class="card-footer-item"><strong> This book has <%= book.comments.length %> comments from  <%= book.commenters_count %> different users.</strong></h4>
      </footer>
    </div>

  <% }) %>
</div>
