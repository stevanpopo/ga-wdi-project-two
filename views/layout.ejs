<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Book Club App</title>
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <link rel="stylesheet" type="text/css" href="./css/style.css">

  </head>
  <body>
    <!-- <%= JSON.stringify(locals.user) %> -->

    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <!-- navbar items, navbar burger... -->
        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>
      <div class="navbar-menu">
        <!-- navbar start, navbar end -->
        <div class="navbar-start">
          <!-- navbar items -->
          <!-- <a href="/" class="navbar-item">Home</a> -->
          <a href="/" class="navbar-item">Books</a>
          <a href="/users" class="navbar-item">Users</a>
        </div>
        <div class="navbar-end">
          <!-- navbar items -->
          <a href="/about" class="navbar-item">About</a>
          <% if(locals.isLoggedIn){ %>
            <li class="navbar-item">Hi <%= locals.currentUser.name %></li>
            <a href="/books/new" class="navbar-item">Add a new book</a>
            <a href="/logout" class="navbar-item">Logout</a>
          <%} else {%>
            <a href="/login" class="navbar-item">Login</a>
            <a href="/register" class="navbar-item">Sign up</a>
          <% } %>

        </div>
      </div>
    </nav>
    <div class="container">
      <%- body -%>
    </div>
  </body>
</html>
