<div class="columns">
  <div class="column is-one-third">
    <figure class="image is-4by4">
      <img src="<%= user.image %>" alt="<%= user.name %> profile image">
    </figure>
  </div>
  <div class="column">
    <article class="content">
      <h1><%= user.name %></h1>
      <h3><%= user.email %></h3>
      <p><%= user.bio %></p>
      <p><%= user.password %></p>
      <div class="field is-grouped is-grouped-multiline">
        <a class="button control" href="/users/<%= user.id %>/edit">Edit Profile</a>
        <form action="/users/<%= user.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button class="button control is-danger is-outlined" name="button">
            <span>Delete Profile</span>
            <span class="icon is-small">
              <i class="fas fa-times"></i>
            </span>
          </button>
        </form>
      </div>
    </article>
    <% console.log('user.id', user); %>
    <% console.log('user.id', user.id); %>
    <% console.log('user.name', user.name); %>
    <% console.log('user comments', userComments); %>
    <% console.log('user.books', user.books); %>
    <% console.log('user.all_comments', user.all_comments); %>
    <% console.log('user.creator', user.creator); %>
    <% if (userComments) { %>
      <% userComments.forEach(comment => { %>
        <article class="message is-info">
          <p class="message-body">
            <%= comment.content %>
          </p>
        </article>
      <% }); %>
    <% } %>
  </div>
</div>
